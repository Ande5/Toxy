<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              ColumnWidth="400" FontSize="14" >
    <Table>
        <Table.Columns>
            <TableColumn Width="100"/>
            <TableColumn/>
        </Table.Columns>

        <TableRowGroup Name="MessageRows">
            <TableRow Block.FontSize="1" Foreground="Transparent">
                <TableCell>
                    <TableCell.TextAlignment>Right</TableCell.TextAlignment>
                    <TableCell.Padding>0,0,20,0</TableCell.Padding>
                    <Paragraph Name="UsernameParagraph"></Paragraph>
                </TableCell>
                <TableCell>
                    <Paragraph Name="MessageParagraph"></Paragraph>
                </TableCell>
            </TableRow>
        </TableRowGroup>
    </Table>
</FlowDocument>
